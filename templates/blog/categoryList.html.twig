{% extends 'base.html.twig' %}

{% block title %} Blog Cuisine Internationales| Recettes Orientales {% endblock %}

{% block body %}

<h2 class="display-4 text-center my-4 animate__animated animate__backInDown" style="animation-delay: 1.2s;"> Liste des Catégories </h2>
    
    <div class="row d-flex justify-content-around ">

        {% for cat in category %}

            <div class="card mb-4 text-center border border-dark rounded-lg animate__animated animate__zoomIn" style="width: 18rem;">
                <img src="{{ cat.category.image }}" class="card-img-top" alt="{{ cat.category.title }}">
                <div class="card-body">
                    <h3 class="card-title"> {{ cat.category.title }} </h3> <!-- to dynamically change the title name for each cards -->
                    
                    <p class="card-text"> {{ cat.category.content|slice(0, 100)|raw }}... </p> <!-- 'raw' or 'striptags'to remove the <p> tags from the sides on the contents-->
                    <hr>
                    <p> Posté le {{ cat.createdAt|date("d/m/Y") }} à {{ cat.createdAt|date("H:i:s") }} </p>
                    <a href="{{ path('blog_show', {'id':cat.category.id}) }}" class="btn btn-dark">Voir le détail</a>
                </div>
            </div>

        {% endfor %}

    </div>

{% endblock %}