{% extends 'base.html.twig' %} 
{% block body %}

    <h1 class="display-4 text-center my-4">Nous contacter</h1>

        {% for message in app.flashes('success') %}
            <div class="col-md-5 mx-auto alert alert-success text-center">
            {{ message }} 
            </div>
        {% endfor %}

    <div class="row justify-content-around mt-5">
        <div class="col-md-5 col-lg-5 mb-4">

            {{ form_start(formContact, {'attr' : {'class' : 'text-white style-formulaire my-bgcolor','style': 'height: 667px'}} ) }}
                <h3>Envoyer un message</h3>

                {{ form_row(formContact.firstname, {'label' : "Prénom"}) }}

                {{ form_row(formContact.lastname, {'label' : "Nom de famille"}) }}

                {{ form_row(formContact.phone, {'label' : "Téléphone"}) }}

                {{ form_row(formContact.email, {'label' : "Email"}) }}

                {{ form_row(formContact.message, {'label' : "Message"}) }}

                <button type="submit" class="btn btn-secondary mt-5" style="float:right" >Envoyer</button>

            {{ form_end(formContact) }} 
        </div>   
        <div class="col-md-5 col-lg-5 ">
            
            <div class="card text-white my-bgcolor" style="width: 38rem;">
                <div class="card-body ">
                    <p class="card-text " ><i class="fas fa-phone fa-2x"></i><span class="ml-4" style="font-size:24px;"> 06 00 00 00 00</span></p>
                    
                    <p><i class="fas fa-home fa-2x"></i><span class="ml-4" style="font-size:24px"> 4 rue de la gastronomie 75000 Paris</span></p>   
                            
                    <a href="https://www.pinterest.fr/"><img src="../images/pinterst.png" /></a>
                    <a href="https://twitter.com/"><img src="../images/oiseau.png" /></a>
                    <a href="https://www.snapchat.com/"><img src="../images/snap.png" /></a>
                </div>
            </div>
        
            <div class="mt-5 ">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2629.2314416435656!2d1.9834433150840498!3d48.77747161435581!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e683f40015dfc9%3A0x8e49c8054167a7e2!2s2%20Rue%20Eug%C3%A8ne%20Pottier%2C%2078190%20Trappes!5e0!3m2!1szh-CN!2sfr!4v1594736690916!5m2!1szh-CN!2sfr" width="600" height="410" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>

    </div>

{% endblock %}