{% extends 'base.html.twig' %}

{% block title %}Back office | Gestion des articles{% endblock %}

{% block body %}

<h1 class="display-4 text-center my-4">Gestion des commentaires </h1>

<div class="table-responsive mt-5">
    <table class="table text-black bg-white">
        <thead class="thead-dark text-center">
        <tr>
            <th scope="col">Auteur</th>
            <th scope="col">Contenu</th>
            <th scope="col">Heure de Creation</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
    {% for comment in comments %}          
        <tr>
    
            <td>{{ comment.author }} </td>
            <td>{{ comment.content | raw }} </td>
            <td>{{ comment.createdAt | date('d/m/ Y Ã  H:i:s') }}</td>
            <td><a href="{{ path('admin_delete_comment', { 'id': comment.id}) }}" class="text-dark"><i class="fas fa-trash-alt btn btn-danger text-white"></i></a></td>
        </tr>
    {% endfor %}    
        </tbody>
    </table>
</div>                   
             




                
           
    
         


{% endblock %}